# Database
DATABASE_URL=postgresql://username:password@localhost/writify_db

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Email Configuration (for password reset, etc.)
# Para development, pode comentar estas linhas para desabilitar email
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password-or-app-password
MAIL_DEFAULT_SENDER=noreply@writify.com

# Ou usar MailHog para desenvolvimento local
# MAIL_SERVER=localhost
# MAIL_PORT=1025
# MAIL_USE_TLS=False

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Stripe Configuration (IMPORTANT: Use test keys in development)
# Get these from your Stripe Dashboard
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Webhook secret from Stripe Dashboard > Webhooks > [Your Endpoint] > Signing Secret
STRIPE_WEBHOOK_SECRET=whsec_...

# Price IDs from Stripe Dashboard (create products first)
# Monthly plan ($27/month)
STRIPE_MONTHLY_PRICE_ID=price_...

# Annual plan ($192/year) 
STRIPE_ANNUAL_PRICE_ID=price_...

# Production Configuration (set to 'production' when deploying)
ENVIRONMENT=development